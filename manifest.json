{
  "manifest_version": 3,
  "name": "Joe Rogan Spotify Theater Mode",
  "version": "0.9.0",
  "description": "Makes the video UI easier to see",
  "short_name": "Joe Rogan Spotify Theater Mode",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "host_permissions": [
    "https://open.spotify.com/*"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://open.spotify.com/*"
      ],
      "js": [
        "jquery-3.5.1.min.js",
        "background.js"
      ]
    }
  ]
}
